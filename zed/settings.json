// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // "checkOnSave": {
        //   "command": "clippy" // rust-analyzer.checkOnSave.command
        // }
      }
    }
  },
  "format_on_save": "on",
  "show_copilot_suggestions": true,
  "base_keymap": "VSCode",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "show": "system"
  },
  "theme": { "dark": "Gruvbox Dark Soft", "light": "Atelier Dune Light" },
  "buffer_font_size": 13,
  "vim_mode": true,
  "completion_documentation_secondary_query_debounce": 100,
  "editor_font_family": "Monaspace Argon",
  "terminal": {
    "default_height": 700,
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  }
}
